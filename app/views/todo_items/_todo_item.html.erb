<div class="row clearfix">
  <% if todo_item.completed? %>

    <div class="complete">
      <%= link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do %>
        <i class="fa fa-check" style="opacity: 0.4;"></i>
      <% end %>
    </div>
    <div class="todo_item">
      <p style="opacity: 0.3;">
      <strike>
        <%= todo_item.content %>
      </strike></p>
    </div>
    <div class="todo_time">
      <p>完成時間 <%= time_ago_in_words(todo_item.completed_at) %></p>
    </div>

    <div class="trash">
      <%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "您確定要刪除嗎？"} do %>
        <i class="fa fa-trash" style="opacity: 0.4;"></i>
      <% end %> 
    </div>

  <% else %>

    <div class="complete">
      <%= link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do %>
        <i class="fa fa-check"></i>
      <% end %>
    </div>
    <div class="todo_item">
      <p><%= todo_item.content %></p>
    </div>
    <div class="todo_time">
      <p>建立時間 <%= time_ago_in_words(todo_item.created_at) %></p>
    </div>
    <div class="trash">
      <%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "您確定要刪除嗎？"} do %>
        <i class="fa fa-trash"></i>
      <% end %> 
    </div>
  <% end %>
</div>